# .bash_aliases


alias \
  vrc="vim ~/.vimrc"            \
  brc="vim ~/.bashrc"     \
  grep="grep -i --colour=auto"  \
  egrep="egrep -i --colour=auto"\
  fgrep="fgrep -i --colour=auto"\
  curl="curl -L"                \
  ls="ls -h --color=auto"       \
  vi=vim

alias \
  repos="cd ${REPOS} && ls -A"

alias \
  k="clear"        \
  cp="cp -iv"      \
  mv="mv -iv"      \
  rm="rm -v"       \
  mkd="mkdir -pv"

alias \
  dev="ssh hiko@127.0.0.0.1 -p 909"        \


